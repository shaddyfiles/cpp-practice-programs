#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

int main() {
    int num, guess, tries = 0, missed , score;

    srand(time(0));
    num = (rand() % 10) + 1;

    do {
        cout << "Enter your number between 1 to 10: " << endl;
        cin >> guess;
        tries++;

        if (guess != num) {
            missed = abs(guess - num);
            cout << "You missed by: " << missed << endl;
        }

    } while (guess != num);

    cout << "******* YOU WON! HURRAY ******" << endl;
    cout << "You won in " << tries << " tries." << endl;
    score = 100 - ((tries-1)*7) ;
    cout << "Your score is  " << score << endl;
    cout << "press enter to play again  " << endl;
    
    return 0;
}
